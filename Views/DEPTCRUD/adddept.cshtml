@model mvcproject.Models.department
@{
    ViewBag.Title = "adddept";
}

<h2>Add</h2>

<form method="post" enctype="multipart/form-data" style="text-align:center">
    @Html.ValidationSummary()
    <div class="form-horizontal">
        <div class="form-group row">
            @Html.LabelFor(n => n.deptname, new { @class = "col-md-4" })
            @Html.TextBoxFor(n => n.deptname, new { @class = "col-md-6 form-control" })

            <div class="col-md-4 text-danger">
                @Html.ValidationMessageFor(n => n.deptname)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(n => n.location, new { @class = "col-md-4" })
            @Html.TextBoxFor(n => n.location, new { @class = "col-md-6 form-control" })

            <div class="col-md-4 text-danger">
                @Html.ValidationMessageFor(n => n.location)
            </div>
        </div>

        <br />
        Image: <input type="file" name="imgpath" />
        <br />

    </div>
    <input type="submit" value="save" class="btn btn-primary" />
</form>

