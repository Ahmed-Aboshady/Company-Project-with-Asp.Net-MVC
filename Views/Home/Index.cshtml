
@model List<mvcproject.Models.department>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <section class="page-section portfolio" id="portfolio">
        <div class="container">
            <!-- Portfolio Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Department</h2>
            <button type="button" class="btn btn-light" style="float:left">
                @Html.ActionLink("RegisterEmployee", "register")</button>
            <button type="button" class="btn btn-warning" style="float:right">@Html.ActionLink(linkText: "Admin",actionName: "Showdept",controllerName: "DEPTCRUD")</button>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Portfolio Grid Items-->
            <div class="row">
                <!-- Portfolio Item 1-->
                @*   *@
                @foreach (var item in Model)
                {

                 
                    <div class="col-md-6 col-lg-4 mb-5">
                        <a href="/Home/employee/@item.deptid">
                            <div class="portfolio-item mx-auto" data-toggle="modal">
                                <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                    <div class="portfolio-item-caption-content text-center text-white"> </div>
                                </div>

                                <img class="img-fluid" style="height:250px;width:100%" src="~/imgfile/@item.imgpath" alt="" />
                                @*<img class="img-fluid" style="height:250px;width:100%" src="~/assets/img/portfolio/img010.jpg" alt="" />*@

                            </div>
                        </a>
                        <div style="text-align:center">
                            <h2>@item.deptname</h2>
                            <h4>Location is @item.location</h4>
                        </div>
                    </div>

                }
            </div>
               </div>
           </section>
        </div>
