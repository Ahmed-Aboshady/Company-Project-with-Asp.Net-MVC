@model mvcproject.Models.employee
@{
    ViewBag.Title = "checkkuser";
}

<h2>checkkuser</h2>

<form method="post">
    @Html.HiddenFor(n => n.id)
    <div>
        <div class="form-group row">
            @Html.LabelFor(n => n.name, new { @class = "col-md-4" })
            @Html.TextBoxFor(n => n.name, null, new { @class = "col-md-6 form-control" })

            <div class="col-md-4 text-danger">
                @Html.ValidationMessageFor(n => n.name)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(n => n.password, new { @class = "col-md-4" })
            @Html.TextBoxFor(n => n.password, null, new { @class = "col-md-6 form-control" })

            <div class="col-md-4 text-danger">
                @Html.ValidationMessageFor(n => n.password)
            </div>
        </div>
    </div>
    @Html.ActionLink("Edit", "checkuser", new { id = Model.id })
    <input type="submit" value="Login" class="btn btn-primary" />
    @if (ViewBag.status != null)
    {
        <label>@ViewBag.status</label>
    }

</form>